
.uni-navbar {
	position: fixed;
	top: 10rpx;
	left: 18rpx;
	width: 100%;
	background-color: #ffffff;
	z-index: 1025;
}
.uni-navbar-shadow {
	-webkit-box-shadow: 0 1px 6px #ccc;
	        box-shadow: 0 1px 6px #ccc;
}
