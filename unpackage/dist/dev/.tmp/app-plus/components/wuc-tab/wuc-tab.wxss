.wuc-tab {
    white-space: nowrap;
}
.wuc-tab-item {
	position: relative;
    height: 72rpx;
    display: inline-block;
    line-height: 72rpx;
    margin: 0 24rpx 0 10rpx;
    padding: 0 20rpx;
	font-size: 30rpx;
	font-weight: bold;
	color:rgba(45,45,45,1);
}
.wuc-tab-item:first-child{
	margin: 0 30rpx 0 0;
    padding: 0 20rpx 0 0;
}
.wuc-tab-item.cur {
    border-bottom: none;
}
.wuc-tab.fixed {
	position: fixed;
	width: 660rpx;
	top: 320rpx;
	left: 28rpx;
	z-index: 1024;
